@model BooksListApi.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Редагувати книгу";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Редагувати книгу</h3>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Назва</label>
                    <input asp-for="Title" class="form-control" placeholder="Назва книги" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Author" class="form-label fw-semibold">Автор</label>
                    <input asp-for="Author" class="form-control" placeholder="Автор книги" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label fw-semibold">Рік видання</label>
                    <input asp-for="Year" class="form-control" type="number" placeholder="Наприклад, 2020" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label fw-semibold">Жанр</label>
                    <input asp-for="Genre" class="form-control" placeholder="Жанр книги" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Зберегти
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Назад до списку
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
