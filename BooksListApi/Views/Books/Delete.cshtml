@model BooksListApi.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Видалити книгу";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Ви впевнені, що хочете видалити цю книгу?</h3>
        </div>
        <div class="card-body bg-light">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Назва</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-bold">Автор</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3 fw-bold">Рік видання</dt>
                <dd class="col-sm-9">@Model.Year</dd>

                <dt class="col-sm-3 fw-bold">Жанр</dt>
                <dd class="col-sm-9">@Model.Genre</dd>
            </dl>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between">
            <form asp-action="Delete" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash3"></i> Видалити
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left"></i> Назад до списку
            </a>
        </div>
    </div>
</div>
