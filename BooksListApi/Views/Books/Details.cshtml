@model BooksListApi.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Деталі книги";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Деталі книги</h3>
        </div>
        <div class="card-body bg-light">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Назва</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-bold">Автор</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3 fw-bold">Рік видання</dt>
                <dd class="col-sm-9">@Model.Year</dd>

                <dt class="col-sm-3 fw-bold">Жанр</dt>
                <dd class="col-sm-9">@Model.Genre</dd>
            </dl>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                <i class="bi bi-pencil"></i> Редагувати
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left"></i> Назад до списку
            </a>
        </div>
    </div>
</div>
