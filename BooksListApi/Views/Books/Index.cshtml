@model IEnumerable<BooksListApi.Models.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Список книг";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Список книг</h1>

    <div class="mb-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Додати нову книгу
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Наразі немає жодної книги в базі.</div>
    }
    else
    {
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Author)</th>
                    <th>@Html.DisplayNameFor(model => model.Year)</th>
                    <th>@Html.DisplayNameFor(model => model.Genre)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author)</td>
                        <td>@Html.DisplayFor(modelItem => item.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                            <a class="btn btn-sm btn-info text-white me-1" asp-action="Details" asp-route-id="@item.Id">Деталі</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
